{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "main/*": [
        "main/*"
      ],
      "renderer/*": [
        "renderer/*"
      ],
      "types/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "./src/renderer/**/*",
    "./src/main/**/*",
    "./src/preload/**/*",
    "./src/types/**/*"
  ],
  "files": [
    "./src/types/renderer.d.ts",
    "./src/types/main.d.ts",
    "./src/types/common.d.ts"
  ]
}
